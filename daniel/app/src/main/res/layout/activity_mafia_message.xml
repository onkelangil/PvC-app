<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.graungaard.pvc_app.MafiaMessageActivity"
    android:background="#000000"
    android:id="@+id/HEJ">

    <TextView
        android:layout_width="100dp"
        android:layout_height="230dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jeg er Don Hansen, du skylder mig rigtig mange penge. Jeg ved at du som studerende ikke har ikke har råd, men arbejd for mig, og din gæld vil blive betalt af."
        android:id="@+id/textView"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="OK"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ffffff"
        android:onClick="buttonOnClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:src="@drawable/godfather" />


</RelativeLayout>
